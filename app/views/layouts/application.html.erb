<!DOCTYPE html>
<html>
<head>  
  <title>にゃんすたぐらむ</title>
  
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script type="text/javascript" src="//code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

</head>
<body>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <!-- <div class="container"> -->
      <div style="margin-left: 100px"><a class="navbar-brand" href="/"><span class=".text-dark">にゃんすたぐらむ</span></a></div>
      <!-- メニュー項目 -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- 左詰め -->
        <ul class="navbar-nav my-2 my-lg-0">
        </ul>
      </div>
      <div class="text-right" style="margin-right: 100px">
        <!-- 右詰め -->
        <select name="breed" id="breed" class="btn btn-default" style="width: 150px">
          <option value="">品種を選択</option>
          <% @breeds.each do |breed| %>
            <option value="<%= breed.id%>"><%= breed.name%></option>
          <% end %>
        </select>
        <select name="prefucture" id="prefucture" class="btn btn-default" style="width: 150px">
          <option value="">地域を選択</option>
          <option value="all">全部</option>
          <optgroup label="北海道">
            <option value="hokkaido">北海道</option>
          </optgroup>
          <optgroup label="関東">
            <option value="tokyo">東京都</option>
            <option value="saitama">埼玉県</option>
          </optgroup>
          <optgroup label="関西">
            <option value="aiti">愛知県</option>
            <option value="kyoto">京都府</option>
          </optgroup>
          <optgroup label="九州">
            <option value="hukuoka">福岡県</option>
          </optgroup>
        </select>
        　<button class="btn btn-default" id="search" onclick="search_cat()">検索</button>
      </div>
      <script type="text/javascript"> 
        function search_cat() {
          let prefucture = document.getElementById("prefucture").value;
          let breed = document.getElementById("breed").value;

          if(prefucture != "" && breed != "") {
            console.log("/cat/" + prefucture + "/" + breed);
            location.href= "/cat/" + prefucture + "/" + breed;
          } else if(prefucture != ""){
            if(prefucture === "all") {
              location.href= "/";
            } else{
              location.href= "/cat/prefucture/" + prefucture;
            }
          } else if(breed != "") {
            location.href= "/cat/breed/" + breed;
          }
        }
      </script>
    <!-- </div> -->
  </nav>
</header>

<%= yield %>

</body>
</html>
